<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FFFFFF"/> <!-- fondo blanco -->
    <corners android:radius="50dp"/> <!-- bordes redondeados -->
    <padding
        android:left="24dp"
        android:top="16dp"
        android:right="24dp"
        android:bottom="16dp" />
    <stroke android:color="#B0C4DE" android:width="2dp"/> <!-- borde gris-azulado suave -->
    <shadowColor android:color="#33000000"/> <!-- efecto de sombra opcional -->
</shape>